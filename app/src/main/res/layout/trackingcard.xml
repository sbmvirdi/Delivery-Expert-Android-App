<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="325dp"
        android:layout_centerHorizontal="true"
        app:cardBackgroundColor="#E13530"
        app:cardCornerRadius="20dp"
        android:layout_height="200dp"/>


    <androidx.cardview.widget.CardView
        android:layout_width="350dp"
        android:layout_height="180dp"
        app:cardCornerRadius="20dp"
        android:layout_centerHorizontal="true"
        app:cardBackgroundColor="#ED3A39"
        >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#ffffff"
        android:text="Shipment Status"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/overpass_semibold"
        />
    <ImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="10dp"
        android:src="@drawable/parcel"

        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#ffffff"
        android:text="Your shipment is on the way!"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="40dp"
        android:fontFamily="@font/overpass_semibold"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#fefefe"
        android:text="Last Update : : 25 min ago..."
        android:layout_marginLeft="80dp"
        android:layout_marginTop="60dp"
        android:textSize="10sp"
        android:fontFamily="@font/overpass_semibold"
        />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="110dp"
            >
            <com.sasank.roundedhorizontalprogress.RoundedHorizontalProgressBar
                android:id="@+id/progress_bar"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:indeterminate="false"
                android:maxHeight="12dp"
                android:minHeight="12dp"
                android:progress="10"
                app:backgroundColor="#E23530"
                app:progressColor="#F7C145"/>


        </RelativeLayout>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ffffff"
            android:layout_marginLeft="20dp"
            android:text="Track Your Package"
            android:layout_marginTop="140dp"
            android:textSize="16sp"
            android:fontFamily="@font/overpass_semibold"
            />

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/arrow"
            android:layout_gravity="end"
            android:id="@+id/trackbutton"
            android:layout_marginRight="20dp"
            android:layout_marginTop="140dp"
            />


        </androidx.cardview.widget.CardView>
</RelativeLayout>
